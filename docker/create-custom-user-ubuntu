# syntax=docker/dockerfile:1.3-labs

FROM ubuntu:focal-20220105

# Set up a custom user jijo 

RUN <<EOF
useradd --create-home --shell /bin/bash jijo
apt-get update
apt-get install --no-install-recommends -y git=2.25.1
apt-get clean
rm -rf /var/lib/apt/lists/*
EOF

USER jijo
WORKDIR /home/jijo
RUN whoami
